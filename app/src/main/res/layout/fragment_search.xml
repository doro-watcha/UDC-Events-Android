<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.goddoro.udc.views.search.SearchViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_current_query"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_item_height"
            android:text="@{vm.query}"
            android:paddingStart="12dp"
            android:visibility="@{vm.query.length() > 0}"
            android:textColor="@color/white"
            android:onClick="@{() -> vm.onClickCurrentQuery()}"
            android:background="@drawable/ripple_effect_black_background"
            android:drawableStart="@drawable/ic_search_white"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            tools:text="BBIC 2019 battle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyRecyclerView"
            android:layout_width="match_parent"
            android:visibility="@{vm.query.length() == 0}"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_history"
            app:layout_constraintTop_toBottomOf="@+id/txt_current_query"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:recyclerview_search_histories="@{vm.histories}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendationRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{vm.query.length() > 0 }"
            tools:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/txt_current_query"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:recyclerview_search_recommendations="@{vm.recommendations}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
