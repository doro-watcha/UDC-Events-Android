<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/background3"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txt_type_battle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_baseline_local_dining_24"
            android:drawablePadding="20dp"
            android:text="@string/common_battle"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_type_performance"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_group_24"
            android:drawablePadding="20dp"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:text="@string/common_performance"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_type_battle"
            app:layout_constraintStart_toStartOf="@+id/txt_type_battle" />

        <TextView
            android:id="@+id/txt_type_party"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/white"
            android:drawablePadding="20dp"
            android:text="@string/common_party"
            android:drawableStart="@drawable/ic_baseline_sports_kabaddi_24"
            app:layout_constraintTop_toBottomOf="@+id/txt_type_performance"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="@+id/txt_type_performance" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
